<Window x:Class="MultiStreamViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MultiStreamViewer"
        Title="Multi Stream Viewer" Height="700" Width="1000">
    <DockPanel Margin="12">

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="Load Demo" Width="120" Click="LoadDemo_Click"/>
            <Button Content="2x2" Width="80" Margin="10,0,0,0" Click="Grid2x2_Click"/>
            <Button Content="3x3" Width="80" Margin="10,0,0,0" Click="Grid3x3_Click"/>
        </StackPanel>

        <UniformGrid x:Name="GridHost" Rows="2" Columns="2" />
    </DockPanel>
</Window>